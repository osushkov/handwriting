CC = g++

CCFLAGS += -std=c++11
CCFLAGS += -pthread
CCFLAGS += -I/usr/local/include -I/usr/include/eigen3
CCFLAGS += -Wall -Wno-deprecated-declarations

ifdef RELEASE
  CCFLAGS += -O3
  CCFLAGS += -DNDEBUG
  CUDAFLAGS += -O3
endif

ifdef DEBUG
  CCFLAGS += -g
  CCFLAGS += -pg
endif

CLFLAGS += -L/usr/local/lib
CLFLAGS += `pkg-config opencv --cflags --libs`
